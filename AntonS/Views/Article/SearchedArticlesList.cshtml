@model ArticlesListModel

<div>
    @foreach (var ar in Model.Articles)
    {
                <div>
                    <b>@ar.Id</b> - @ar.Title
                </div>
                <div>
                    <p>@Html.Raw(ar.Description)</p>
                </div> 
                <div>
                        <a href="@Url.Action("ArticleDetails", "Article", new {id = ar.Id})" class="btn btn-primary" role="button"  >Read more</a>
                </div>
                <hr/>
    }
</div>
