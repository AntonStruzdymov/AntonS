@model AdminMainPageModel

<h1>
    This is an ADMIN only page!
</h1>

<a class="btn btn-secondary" asp-area="" asp-controller="Admin" asp-action="GetNews">GetNews</a>
<a class="btn btn-secondary" asp-controller="Admin" asp-action="RateArticles">Rate Articles</a>

<form asp-controller="Admin" asp-action="ChangeEntity" method="post">
    <select asp-for="EntityName" class="form-select">
        <option selected>Pick entity to work with</option>
        <option value="User">Users</option>
        <option value="Article">Articles</option>
        <option value="Comment">Comments</option>
    </select>
    <button class="btn" id="confirm" type="submit" value="OK">Confirm</button>
</form>

