    @model ArticlesListModel

<h1>
    Pick article to edit
</h1>

<form asp-controller="Admin" asp-action="EditArticle" method="get">
    <select asp-for="Id" class="form-select">
        <option selected>Pick entity to work with</option>
        @foreach (var article in Model.Articles)
        {
                  <option id="listedItem" value="@article.Id">@article.Title</option>
        }
    </select>
    <button class="btn" type="submit" value="OK">Confirm</button>
</form>
<form asp-controller="Admin" asp-action="DeleteAllArticles" method="get">
    <button class="btn" type="submit" value="Delete All">Delete All Articles</button>    
</form>
<a class="btn" id="createButton" asp-action="Create" asp-controller="Article">Create</a>

